{
  "manifest_version": 2,
  "name": "Dyslex E",
  "description": "Dyslex E helps people with reading difficulty access web articles.",
  "version": "0.0.1",
  "background": {
    "scripts": [
      "/static/js/background.js"
    ]
  },
  "browser_action": {
    "default_icon": "logo-128.png",
    "icons": { 
      "16": "logo-16.png",
      "48": "logo-48.png",
     "128": "logo-128.png"
    }
  },
  "permissions": [
    "https://*/*",
    "activeTab",
    "storage"
  ],
  "web_accessible_resources": [
    "static/fonts/*"
  ]
}