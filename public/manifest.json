{
  "manifest_version": 2,
  "name": "Dyslexi",
  "description": "Dyslexi helps people with reading difficulty access web articles.",
  "version": "0.0.1",
  "background": {
    "scripts": [
      "/static/js/background.js"
    ]
  },
  "browser_action": {
    "default_icon": "favicon.ico"
  },
  "permissions": [
    "https://*/*",
    "activeTab",
    "storage"
  ],
  "web_accessible_resources": [
    "static/fonts/*"
  ]
}